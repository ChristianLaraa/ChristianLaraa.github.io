---
import Layout from "../layouts/Layout.astro";

const sponsors = [
  { category: "INTERN", name: "Warner Music México", logo: "/src/assets/logos/wmm.png", url: "https://www.warnermusic.com.mx/" },
  { category: "VOLUNTARIADO", name: "CNU - Centro de Negocios Universitarios, UNAM", logo: "/src/assets/logos/cnu.png", url: "https://www.banamex.com/" },
  { category: "VOLUNTARIADO", name: "DIMEI", logo: "/src/assets/logos/dimei.png", url: "https://www.ingenieria.unam.mx/dimei/" },
  { category: "HACKATHONES", name: "Banorte", logo: "/src/assets/logos/banorte.png", url: "https://www.banorte.com/" },
  { category: "HACKATHONES", name: "AngelHack Global", logo: "/src/assets/logos/hack.png", url: "https://angelhack.com/" },
  { category: "ORGANIZACIONES", name: "University Esports", logo: "/src/assets/logos/esports.png", url: "https://universityesports.lat/" },
  { category: "ORGANIZACIONES", name: "Spotify", logo: "/logos/spotify.png", url: "https://www.spotify.com/" }
];

const categories = ["INTERN", "VOLUNTARIADO", "HACKATHONES", "ORGANIZACIONES"];
---

<Layout title="Currículum">
  <section class="sponsors-section">
    <h2 class="title">¡GRACIAS POR CONFIAR EN MÍ!</h2>

    <div class="sponsors-grid">
      {categories.map((category) => (
        <div class="category-group">
          <h3 class="cat"> {category} </h3>
          {sponsors
            .filter((sponsor) => sponsor.category === category)
            .map((sponsor) => (
              <a href={sponsor.url} target="_blank" class="sponsor-card">
                <img src={sponsor.logo} alt={sponsor.name} />
                <p>{sponsor.name}<br />{sponsor.url}</p>
              </a>
            ))}
        </div>
      ))}
    </div>
  </section>

  <style>
    .sponsors-section {
      background: #1864fc;
      text-align: center;
      padding: 40px;
    }

    .title {
      color: white;
      margin-top: 2.5rem;
      font-weight: bolder;
      font-size: 3.5rem;
      margin-bottom: 30px;
    }

    .cat{
      color: white;
      margin-top: 2rem;
      font-size: 1.5rem;
      font-weight: bolder;
      margin-bottom: 20px;
    }
    .sponsors-grid {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 90px; /* Mayor separación entre columnas */
      row-gap: 60px; /* Más espacio entre filas */
      max-width: 1200px;
      margin: 0 auto;
      align-items: stretch; /* Asegura que los cuadros se alineen bien en filas */
    }

    .sponsor-card {
      background: #ff0404;
      margin-bottom: 30px;
      padding: 50px;
      border-radius: 15px;
      display: flex;
      flex-direction: column;
      align-items: center;
      transition: transform 0.2s ease-in-out;
      text-decoration: none;
      width: 300px;
      height: 300px;
      border: 3px solid white;
    }

    .sponsor-card img {
      max-width: 120px;
      height: auto;
      margin-bottom: 10px;
    }

    .sponsor-card p {
      color: white;
      font-size: 1rem;
      text-align: center;
    }

    .sponsor-card:hover {
      transform: scale(1.1);
    }
</style>


</Layout>
